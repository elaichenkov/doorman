{
  "name": "doorman",
  "displayName": "doorman",
  "publisher": "elaichenkov",
  "description": "Doorman is a simple, lightweight VSCode extension that allows you to link and open test cases from you favorite test management tool directly in VSCode.",
  "version": "0.0.5",
  "icon": "assets/logo-icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/elaichenkov/doorman.git"
  },
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "workspaceContains:**/*.feature"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Doorman",
      "properties": {
        "doorman.configurations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "testIdPattern": {
                "type": "string",
                "description": "Regular expression pattern to match test IDs"
              },
              "url": {
                "type": "string",
                "description": "URL to open when clicking on the CodeLens"
              },
              "title": {
                "type": "string",
                "default": "ðŸ”— Open test",
                "description": "Title to display in the code. If not specified, the 'ðŸ”— Open test' will be used"
              }
            },
            "required": [
              "testIdPattern",
              "url"
            ]
          },
          "default": [],
          "description": "Array of configuration objects for different test ID patterns and URLs"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "xpretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "mocha -r ts-node/register --ui tdd out/test/**/*.test.js",
    "t": "node ./out/test/run-test.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "mocha-explorer-launcher-scripts": "^0.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vscode": "^1.1.37",
    "vscode-test": "^1.6.1"
  }
}
